<!-- BANNER -->
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @list.photo.key%>')">
  <div class="container">
    <h1><%= @list.name %></h1>
    <%= link_to  "Add a movie", new_list_bookmark_path(@list), class: "btn btn-flat" %>
  </div>
</div>

<!-- GRID -->
<div class="container">
<div class="grid m-3 p-3">
  <div class="row">
    <% if @list.bookmarks.empty? %>
      <%= link_to  "Add your first movie", new_list_bookmark_path(@list) %>
    <% else %>
      <% @list.bookmarks.each do |bookmark|%>
      <div class="card-trip">
        <%= image_tag bookmark.movie.poster_url %>
        <%= link_to  "X", bookmark_path(bookmark), class: "btn-cross", method: :delete, data: { confirm: "Are you sure?" }  %>
        <div class="card-trip-infos">
          <div>
            <h2> <%= bookmark.movie.title %> </h2>
            <p> <%= bookmark.comment %> </p>
          </div>
          <h2 class="card-trip-pricing"> <%= bookmark.movie.rating %></h2>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>

<%= link_to  "Return to your lists page", root_path, class: "btn btn-gradient" %>

</div>
